<h1>Listar Recursos</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= link_to 'Mostrar', pin %></td>
        <td><%= link_to 'Editar', edit_pin_path(pin) %></td>
        <td><%= link_to 'Eliminar', pin, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo recurso', new_pin_path %>
